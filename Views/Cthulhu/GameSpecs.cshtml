@{
    ViewData["Title"] = "Call of Cthulhu - Specifications";
    Layout = "_Layout";
}

<div class="cthulhu-theme">
    <h1>@ViewData["Title"]</h1>

    <div class="game-specs">
        <h2>Core Mechanics</h2>
        <ul>
            <li>D100 system</li>
            <li>Sanity mechanics</li>
            <li>1920s setting</li>
        </ul>
    </div>

    <!-- Form to accses subscription page -->
    <form asp-action="Subscribe" method="post">
        <input type="email" name="email" placeholder="Email" required />
        <button type="submit">Subscribe to Newsletter</button>
    </form>
    <!--Thank you stack overflow people teaching me how to read values. Im sure there was a simplier way but whatever-->
    <!--https://stackoverflow.com/questions/41577376/how-to-read-values-from-the-querystring-with-asp-net-core#41577446--->
    @if (Context.Request.Query["subscribed"] == "True")
    {
        <div class="alert alert-success mt-3">Thank You!</div>
    }
</div>